<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/new_sensor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="16dp"
        android:layout_marginLeft="10dp"
        android:text="Add new sensor:" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:padding="16dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sensor_details_element_name">

            <android.support.percent.PercentRelativeLayout>
                <TextView
                    android:id="@+id/sensor_details_name"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    app:layout_widthPercent="30%"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/sensor_details_value_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sensor_details_name"
                    android:textSize="20dp"
                    app:layout_widthPercent="53%" />

            </android.support.percent.PercentRelativeLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sensor_details_element_type">

            <android.support.percent.PercentRelativeLayout>

                <TextView
                    android:id="@+id/sensor_details_type"
                    android:layout_height="wrap_content"
                    android:text="Type:"
                    android:textSize="20dp"
                    app:layout_widthPercent="30%" />

                <EditText
                    android:id="@+id/sensor_details_value_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sensor_details_type"
                    android:textSize="20dp"
                    app:layout_widthPercent="53%" />

            </android.support.percent.PercentRelativeLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sensor_details_element_diameter">

            <android.support.percent.PercentRelativeLayout>

                <TextView
                    android:id="@+id/sensor_details_diameter"
                    android:layout_height="wrap_content"
                    android:text="Diameter:"
                    android:textSize="20dp"
                    app:layout_widthPercent="30%" />

                <EditText
                    android:id="@+id/sensor_details_value_diameter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sensor_details_diameter"
                    android:textSize="20dp"
                    app:layout_widthPercent="53%" />

            </android.support.percent.PercentRelativeLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sensor_details_element_description">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="75dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sensor_details_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/sensor_details_value_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:textSize="20dp" />
            </LinearLayout>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sensor_details_element_inputPin">

            <android.support.percent.PercentRelativeLayout>
                <TextView
                    android:id="@+id/sensor_details_inputPin"
                    android:layout_height="wrap_content"
                    android:text="Input Pin:"
                    android:textSize="20dp"
                    app:layout_widthPercent="30%"/>

                <EditText
                    android:id="@+id/sensor_details_value_inputPin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sensor_details_inputPin"
                    android:textSize="20dp"
                    app:layout_widthPercent="53%" />

            </android.support.percent.PercentRelativeLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sensor_details_element_statusPin">

            <android.support.percent.PercentRelativeLayout>
                <TextView
                    android:id="@+id/sensor_details_statusPin"
                    android:layout_height="wrap_content"
                    android:text="Status Pin:"
                    android:textSize="20dp"
                    app:layout_widthPercent="30%"/>

                <EditText
                    android:id="@+id/sensor_details_value_statusPin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sensor_details_statusPin"
                    android:textSize="20dp"
                    app:layout_widthPercent="53%" />

            </android.support.percent.PercentRelativeLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sensor_details_element_outputPin">

            <android.support.percent.PercentRelativeLayout>
                <TextView
                    android:id="@+id/sensor_details_outputPin"
                    android:layout_height="wrap_content"
                    android:text="Output Pin:"
                    android:textSize="20dp"
                    app:layout_widthPercent="30%"/>

                <EditText
                    android:id="@+id/sensor_details_value_outputPin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sensor_details_outputPin"
                    android:textSize="20dp"
                    app:layout_widthPercent="53%" />

            </android.support.percent.PercentRelativeLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sensor_details_element_outputein">

            <android.support.percent.PercentRelativeLayout>
                <TextView
                    android:id="@+id/mResponseTv"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    app:layout_widthPercent="83%"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorError"/>

            </android.support.percent.PercentRelativeLayout>
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/sensor_details_save"
        android:text="Save"
        android:layout_gravity="right"
        android:layout_marginRight="26dp"
        />
</LinearLayout>
